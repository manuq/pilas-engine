<div class="vh-100 flex flex-column">

  <div class="ma2 flex">
    <div class="w5">
      {{#link-to "ejemplos" class="ba pa2 button dib br2 verdana f6 link pointer hover-bg-black-10 black bg-animate hover-bg-black-10 b--black-20 unselectable v-top"}}{{pilas-icono icono="volver"}} {{t "return"}}{{/link-to}}
      {{#link-to "editor" (query-params ejemplo=model.nombre) class="ba pa2 button dib br2 verdana f6 link pointer hover-bg-black-10 black bg-animate hover-bg-black-10 b--black-20 unselectable v-top"}}{{pilas-icono icono="computadora"}} {{t "edit"}}{{/link-to}}
      <span class="dn" id="test-nombre" data-nombre={{model.nombre}}>{{model.nombre}}</span>
    </div>

    <div class="flex1"></div>

    {{pilas-navegar-ejemplos nombre=model.nombre}}

    <div class="flex1"></div>

    <div class="w5 tr">
      {{pilas-selector-de-modo-zoom modoZoom=model.modoZoom}}
    </div>
  </div>

  <div class="ma2 flex flex11 bg-fondo-canvas">
    {{pilas-ejemplo nombre=model.nombre modoZoom=model.modoZoom proyecto=model.ejemplo.proyecto}}
  </div>

</div>
