{{#if mensaje}}
  {{#if mensaje.link}}
    <div class="f6 pb1">{{mensaje.mensaje}}</div>
    <div class="f6 pb1 flex items-center pl3 pt2">{{#pilas-link class="link texto pointer" url=mensaje.link}}{{mensaje.link}}{{/pilas-link}} <span class="dib w1"></span>{{pilas-boton-copiar miniatura=true texto=mensaje.link}}</div>
  {{else if mensaje.codigo}}
    <div class="f6 pb1 flex items-center pl3">
      <pre>{{mensaje.codigo}}</pre>
      <span class="dib w1"></span>
      {{pilas-boton-copiar miniatura=true texto=mensaje.codigoCompleto}}
    </div>
  {{else if (eq mensaje.tipo "captura")}}
    <img src={{mensaje.data}} alt="captura de pantalla" style="width: 180px; margin-top: 10px; margin-bottom: 10px;">
  {{else}}
    <div class="f6 pb1">{{mensaje}}</div>
  {{/if}}
{{else}}
  <div>
    &nbsp;
  </div>
{{/if}}
